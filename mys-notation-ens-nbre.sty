%---   Réels
%
\def\mys@R{\mys@number@set@aux{R}}%
%
\begingroup%
\catcode`_=8%
\expandafter\gdef\csname mys@R@+\endcsname{\mys@R_+}%
\expandafter\gdef\csname mys@R@-\endcsname{\mys@R_-}%
\expandafter\gdef\csname mys@R@*\endcsname{\mys@R^*}%
\expandafter\gdef\csname mys@R@+*\endcsname{\mys@R_+^*}%
\expandafter\gdef\csname mys@R@-*\endcsname{\mys@R_-^*}%
\endgroup%
%
\NewDocumentCommand{\R}{t+t-t*}%
  {%
    \IfBooleanTF{#1}%
      {%
      \IfBooleanTF{#3}%
        {\mys@csuse{mys@R@+*}}%
        {\mys@csuse{mys@R@+}}%
      }%
      {%
      \IfBooleanTF{#2}%
        {%
        \IfBooleanTF{#3}%
          {\mys@csuse{mys@R@-*}}%
          {\mys@csuse{mys@R@-}}%			
        }%
        {%
        \IfBooleanTF{#3}%
          {\mys@csuse{mys@R@*}}%
          {\mys@R}%
        }%
      }%
  }%
%
\newcommand*{\Rplus}{\mys@csuse{mys@R@+}}%
%
\newcommand*{\Rmoins}{\mys@csuse{mys@R@-}}%
%
\newcommand*{\Rplusetoile}{\mys@csuse{mys@R@+*}}%
%
\newcommand*{\Rmoinsetoile}{\mys@csuse{mys@R@-*}}%
%
\newcommand*{\Retoile}{\mys@csuse{mys@R@*}}%
