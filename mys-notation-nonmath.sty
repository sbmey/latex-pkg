  {%
  \sbox0{\Large #1}\sbox1{#2}%
  \ifdim \wd0 > \wd1 %
    \makebox[\wd0]%
      {%
      {\Large #1}%
      \hspace{-\wd0}%
      \hfill #2\hfill%
      }%
\else
    \makebox[\wd1][c]%
      {%
      #2%
      \hspace{-\wd1}%
      \hfill %
      {\Large #1}%
      \hfill%
    }%
\fi%
  }%
